srcdir=         @srcdir@
top_srcdir=     @top_srcdir@
top_builddir=   @top_builddir@
VPATH=          @srcdir@

include ${top_builddir}/Mk/autoconf.mk
include ${top_builddir}/Mk/compile.mk

TEST_OBJS=	tests.o

CFLAGS+=	@CHECK_CFLAGS@
OBJCFLAGS+=	@CHECK_CFLAGS@
LIBS+=		$(OBJC_LIBS) @CHECK_LIBS@


all: tests

tests: ${TEST_OBJS}
	${CC} -o $@ ${LDFLAGS} ${TEST_OBJS}

test:: tests
	./tests $(top_srcdir)/auth-ldap.conf

clean::
	rm -f $(TEST_OBJS) tests

distclean:: clean
	rm -f Makefile
