srcdir=         @srcdir@
top_srcdir=     @top_srcdir@
top_builddir=   @top_builddir@
VPATH=          @srcdir@

include ${top_builddir}/Mk/autoconf.mk
include ${top_builddir}/Mk/compile.mk
include ${top_builddir}/Mk/subdir.mk

PLUGIN_NAME=	openvpn-auth-ldap
PLUGIN_OBJS=	auth-ldap.o LFString.o LFLDAPConnection.o LFAuthLDAPConfig.o strlcpy.o
TEST_LIB=	libauth-ldap-testing${PLUGIN_SUFFIX}

CFLAGS+=	-fPIC $(LDAP_CFLAGS) $(OPENVPN_CFLAGS)
OBJCFLAGS+=	-fPIC $(LDAP_CFLAGS) $(OPENVPN_CFLAGS)
LIBS+=		$(LDAP_LIBS) $(OBJC_LIBS)


INSTALL_LIB=		$(INSTALL) -m 755
PLUGIN_INSTALL_DIR=	$(DESTDIR)$(libdir)

all:: $(PLUGIN_FILE) $(TEST_LIB)

$(PLUGIN_FILE): $(PLUGIN_OBJS)
	$(MAKE_PLUGIN)

$(TEST_LIB): $(PLUGIN_OBJS)
	$(AR) -r $@ $(PLUGIN_OBJS)

test:: $(TEST_LIB_NAME)
	
install:: $(PLUGIN_FILE)
	$(INSTALL_PLUGIN)

clean::
	rm -f $(TEST_OBJS) $(PLUGIN_OBJS) test
	$(CLEAN_PLUGIN)

distclean:: clean
	rm -f Makefile
