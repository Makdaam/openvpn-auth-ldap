srcdir=         @srcdir@
top_srcdir=     @top_srcdir@
top_builddir=   @top_builddir@
VPATH=          @srcdir@

include ${top_builddir}/Mk/autoconf.mk
include ${top_builddir}/Mk/compile.mk
include ${top_builddir}/Mk/subdir.mk

LIB_OBJS=	TRPacketFilter.o \
		TRPFAddress.o

LIB=		libauth-ldap-pf.a

all:: $(LIB)

$(LIB): $(LIB_OBJS)
	$(AR) -r $@ $(LIB_OBJS)
	# XXX remove once the library isn't empty on non-FreeBSD platforms
	$(RANLIB) $@

clean::
	rm -f $(LIB_OBJS) $(LIB)

distclean:: clean
	rm -f Makefile
