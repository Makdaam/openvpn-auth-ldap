srcdir=         @srcdir@
top_srcdir=     @top_srcdir@
top_builddir=   @top_builddir@
VPATH=          @srcdir@

SUBDIR=		config \
		ldap

include ${top_builddir}/Mk/autoconf.mk
include ${top_builddir}/Mk/compile.mk
include ${top_builddir}/Mk/subdir.mk


TEST_OBJS=	tests.o \
		mockpf.o \
		LFString.o \
		TRArray.o \
		TRHash.o \
		TRObject.o \
		TRPacketFilter.o \
		TRPFAddress.o \
		TRVPNSession.o

TEST_GEN=	tests.h

CFLAGS+=	@CHECK_CFLAGS@ -DTEST_DATA=\"${srcdir}/data\"
OBJCFLAGS+=	@CHECK_CFLAGS@ -DTEST_DATA=\"${srcdir}/data\"

MODULES=	-Lconfig -lauth-ldap-test-config \
		-Lldap -lauth-ldap-test-ldap

LIBS+=		$(OBJC_LIBS) $(LDAP_LIBS) @CHECK_LIBS@ $(MODULES) \
		-L${top_builddir}/src -lauth-ldap-testing \
		-L${top_builddir}/src/ldap -lauth-ldap-ldap \
		-L${top_builddir}/src/config -lauth-ldap-config

LDFLAGS+=	 $(LIBS)

# File Substitutions
EDIT=   sed \
        -e 's,@TEST_DATA\@,$(srcdir)/data,g'

# Recompile the tests every time
all:: tests

# Generate any headers before subdirs are traversed
pre-all:: $(TEST_GEN)

# Generated File(s)
tests.h: tests.h.in
	$(EDIT) $(srcdir)/tests.h.in > $@

tests: ${TEST_GEN} ${TEST_OBJS} ../src/libauth-ldap-testing.a
	${CC} -o $@ ${TEST_OBJS} ${LDFLAGS}

test:: tests
	./tests

install::

clean::
	rm -f $(TEST_OBJS) $(TEST_GEN) tests

distclean:: clean
	rm -f Makefile
