srcdir=         @srcdir@
top_srcdir=     @top_srcdir@
top_builddir=   @top_builddir@
VPATH=          @srcdir@

SUBDIR=		config \
		ldap \
		pf \
		util \
		runner

include ${top_builddir}/Mk/autoconf.mk
include ${top_builddir}/Mk/compile.mk
include ${top_builddir}/Mk/subdir.mk


TEST_OBJS=	tests.o \
		TRObjectTests.o \
		TRVPNSessionTests.o

TEST_GEN=	tests.h

CFLAGS+=	@CHECK_CFLAGS@ -DTEST_DATA=\"${srcdir}/data\"
OBJCFLAGS+=	@CHECK_CFLAGS@ -DTEST_DATA=\"${srcdir}/data\"

MODULES=	-Lconfig -lauth-ldap-test-config \
		-Lldap -lauth-ldap-test-ldap \
		-Lpf -lauth-ldap-test-pf \
		-Lutil -lauth-ldap-test-util \
		-Lrunner -lauth-ldap-test-runner

MODULE_LIBS=	config/libauth-ldap-test-config.a \
		ldap/libauth-ldap-test-ldap.a \
		pf/libauth-ldap-test-pf.a \
		util/libauth-ldap-test-util.a \
		runner/libauth-ldap-test-runner.a

LIBS+=		$(MODULES) \
		-L${top_builddir}/src -lauth-ldap \
		$(OBJC_LIBS) $(LDAP_LIBS) @CHECK_LIBS@

LDFLAGS+=	 $(LIBS)

# File Substitutions
EDIT=   sed \
        -e 's,@TEST_DATA\@,$(srcdir)/data,g'

# Recompile the tests every time
all:: tests

# Generate any headers before subdirs are traversed
pre-all:: $(TEST_GEN)

# Generated File(s)
tests.h: tests.h.in
	$(EDIT) $(srcdir)/tests.h.in > $@

tests: ${TEST_GEN} ${TEST_OBJS} ${MODULE_LIBS} ../src/libauth-ldap.a
	${CC} -o $@ ${TEST_OBJS} ${LDFLAGS}

test:: tests
	./tests

install::

clean::
	rm -f $(TEST_OBJS) $(TEST_GEN) tests

distclean:: clean
	rm -f Makefile
